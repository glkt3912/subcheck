{
  "name": "subcheck-pwa",
  "version": "1.0.0",
  "description": "SubCheck - サブスクリプション無駄率診断PWA",
  "author": "SubCheck Development Team",
  "license": "BSL-1.1",
  "keywords": [
    "pwa",
    "subscription",
    "diagnosis",
    "fintech",
    "offline-first",
    "react",
    "nextjs"
  ],
  "homepage": "https://subcheck.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/subcheck/subcheck-pwa.git"
  },
  "bugs": {
    "url": "https://github.com/subcheck/subcheck-pwa/issues"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "analyze": "ANALYZE=true npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --view --output html --output-path ./lighthouse-report.html",
    "pwa:validate": "lighthouse http://localhost:3000 --only-categories=pwa --view",
    "type-check": "tsc --noEmit",
    "license-check": "node scripts/license-check.mjs"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0",
    "next": "16.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "^3.3.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jsdom": "^27.0.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.5",
    "vitest-localstorage-mock": "^0.1.2"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "not IE 11"
  ],
  "pwa": {
    "name": "SubCheck",
    "short_name": "SubCheck", 
    "description": "サブスクリプション無駄率診断アプリ",
    "theme_color": "#2563eb",
    "background_color": "#ffffff",
    "display": "standalone",
    "orientation": "portrait-primary",
    "scope": "/",
    "start_url": "/"
  }
}
